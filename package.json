{
  "name": "tiresias",
  "description": "Desktop Companion for the Tiresias hearing aid project",
  "version": "0.1.1-alpha",
  "private": true,
  "type": "module",
  "author": {
    "email": "felipe.pbernardo@gmail.com",
    "name": "Felipe Pimenta Bernardo"
  },
  "main": "packages/entry-point.mjs",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=23.0.0"
  },
  "scripts": {
    "build": "npm run build -ws --if-present",
    "compile": "npm run build && electron-builder build --config electron-builder.mjs",
    "test": "npx playwright test ./tests/e2e.spec.ts",
    "start": "node packages/dev-mode.js",
    "typecheck": "npm run typecheck -ws --if-present",
    "version": "node scripts/version.js",
    "release": "git push && git push --tags"
  },
  "devDependencies": {
    "@npmcli/map-workspaces": "4.0.2",
    "@playwright/test": "1.53.2",
    "@types/node": "24.0.10",
    "create-vite": "7.0.1",
    "electron": "37.2.0",
    "electron-builder": "26.0.12",
    "glob": "11.0.3",
    "playwright": "^1.54.1"
  },
  "dependencies": {
    "@app/main": "*"
  }
}
